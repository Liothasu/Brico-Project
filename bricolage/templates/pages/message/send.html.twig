{% extends 'base.html.twig' %}

{% block title %}Message
{% endblock %}

{% block main %}
	<section class="container">
		<div class="row">
			<div class="col">
				<h2>Send a message</h2>
				<div class="message-form">
					{{ form_start(form) }}
					{{ form_row(form.recipient) }}
					{{ form_row(form.title) }}
					{{ form_row(form.content) }}
				</div>
				<div class="mp-button">
					<button type="submit" class="btn btn-success">Send</button>
					{{ form_end(form) }}
					<a href="{{ path("message_index") }}" class="btn btn-danger">Back to Inbox</a>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
