{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block main %}
    {% block section %}
        {{ form_start(form, {'attr': {'class': 'texte-blanc-form'}}) }}
            <fieldset class"mb-3">
            <legend>Create a product</legend>
                {{ form_row(form.reference) }}
                {{ form_row(form.nameProduct) }}
                {{ form_row(form.color) }}
                {{ form_row(form.designation) }}
                {{ form_row(form.quantity) }}
                {{ form_row(form.unitPrice) }}
                {{ form_row(form.priceVAT) }}
                {{ form_row(form.vat) }}
                {{ form_row(form.promos) }}
                {{ form_row(form.category) }}
                {{ form_row(form.supplier) }}
                {{ form_rest(form) }}
            </fieldset>
            <button type="submit" class="btn btn-success my-3">Save</button>
        {{ form_end(form) }}
    {% endblock %}
{% endblock %}