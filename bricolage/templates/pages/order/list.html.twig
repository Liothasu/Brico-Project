{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block main %}
    <section style="color: white">
        <h1>Order List</h1>

        {% if orders is not empty %}
            <ul>
                {% for order in orders %}
                    {% if 'ORDER_PAID' in order.getStatutOrders() or 'ORDER_IN_PROCESS' in order.getStatutOrders() %}
                        <li>
                            Reference : {{ order.reference }} - {{ order.total }} € - {{ order.dateOrder|date('d/m/Y H:i:s') }}
                            <a href="{{ path('order_details', {'id': order.id}) }}">Détails</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucune commande payée ou en cours de traitement trouvée.</p>
        {% endif %}
    </section>
{% endblock %}
