<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Produits</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
    <header>
        {% include 'main/menu_bar.twig' %}
    </header>
    <main>
        <section>
            {% block section %}
                {{ form_start(form, {'attr': {'class': 'texte-blanc-form'}}) }}
                    {{ form_label(form.reference) }}
                    {{ form_widget(form.reference) }}
                    {{ form_label(form.nameProduct) }}
                    {{ form_widget(form.nameProduct) }}
                    {{ form_label(form.color) }}
                    {{ form_widget(form.color) }}
                    {{ form_label(form.designation) }}
                    {{ form_widget(form.designation) }}
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity) }}
                    {{ form_label(form.unitPrice) }}
                    {{ form_widget(form.unitPrice) }}
                    {{ form_label(form.priceVAT) }}
                    {{ form_widget(form.priceVAT) }}
                    {{ form_label(form.vat) }}
                    {{ form_widget(form.vat) }}
                    {{ form_label(form.promos) }}
                    {{ form_widget(form.promos) }}
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    {{ form_label(form.supplier) }}
                    {{ form_widget(form.supplier) }}
                    {{ form_rest(form) }}
                    <button type="submit">Enregistrer</button>
                {{ form_end(form) }}
            {% endblock %}
        </section>
    </main>

    <footer>
        {% include 'main/footer.twig' %}
    </footer>
</body>
</html>