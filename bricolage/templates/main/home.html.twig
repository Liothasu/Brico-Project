                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel{{ promo.id }}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button> #}
            </div>
        </div>
    {% endfor %}

